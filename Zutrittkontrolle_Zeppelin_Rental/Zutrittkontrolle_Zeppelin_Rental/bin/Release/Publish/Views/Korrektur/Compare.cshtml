@model Zutrittkontrolle_Zeppelin_Rental.Models.CompareViewModel

@{
    ViewBag.Title = "Vergleichen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Index", "Korrektur", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    for (int i = 0; i < Model._newModel.Count; i++)
    {
        <div class="row">
            <div class="col-md-6">
                <table class="table" style="float:left;display: inline-block;">
                    <caption>Geladene Daten</caption>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model._oldModel[0].RFID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._oldModel[0].LcorrectModel[0].EventTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._oldModel[0].LcorrectModel[0].EventSource)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._oldModel[0].LcorrectModel[0].EventType)
                        </th>
                    </tr>

                    @foreach (var item in Model._oldModel[i].LcorrectModel)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RFID)
                                @Html.HiddenFor(model => item.RFID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventTime)
                                @Html.HiddenFor(model => item.EventTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventSource)
                                @Html.HiddenFor(model => item.EventSource)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventType)
                                @Html.HiddenFor(model => item.EventType)
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md-6">
                <table class="table" style="float:left;display:inline-block">
                    <caption>Korrigierte Daten</caption>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model._newModel[0].RFID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._newModel[0].LcorrectModel[0].EventTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._newModel[0].LcorrectModel[0].EventSource)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model._newModel[0].LcorrectModel[0].EventType)
                        </th>
                    </tr>

                    @foreach (var item in Model._newModel[i].LcorrectModel)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RFID)
                                @Html.HiddenFor(model => item.RFID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventTime)
                                @Html.HiddenFor(model => item.EventTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventSource)
                                @Html.HiddenFor(model => item.EventSource)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventType)
                                @Html.HiddenFor(model => item.EventType)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
     


       


        <br>
    }


    <p>
        @Html.ActionLink("Zurück zur Startseite", "Index","Home")
    </p>


}

